<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Product\Extension\CanonicalUrlExtension" id="Shopware\Product\Extension\CanonicalUrlExtension">
            <tag name="shopware.entity.extension"/>
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="Shopware\Api\Seo\Repository\SeoUrlRepository"/>
        </service>

        <service class="Shopware\Product\Service\VariantGenerator" id="Shopware\Product\Service\VariantGenerator">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="Shopware\Api\Product\Repository\ProductConfiguratorRepository" type="service"/>
        </service>
    </services>
</container>
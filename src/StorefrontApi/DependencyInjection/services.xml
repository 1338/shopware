<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\StorefrontApi\Product\StorefrontProductRepository" id="Shopware\StorefrontApi\Product\StorefrontProductRepository">
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="Shopware\Cart\Price\PriceCalculator"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductMediaRepository"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductServiceRepository"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\StorefrontContextPersister" id="Shopware\StorefrontApi\Context\StorefrontContextPersister">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\StorefrontContextService" id="Shopware\StorefrontApi\Context\StorefrontContextService">
            <argument type="service" id="Shopware\Context\Service\ContextFactory"/>
            <argument type="service" id="cache.serializer"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Context\Service\ContextRuleLoader"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\StorefrontContextValueResolver" id="Shopware\StorefrontApi\Context\StorefrontContextValueResolver">
            <tag name="controller.argument_value_resolver"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextService"/>
            <argument type="service" id="request_stack"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\ContextTokenResolver" id="Shopware\StorefrontApi\Context\ContextTokenResolver"/>

        <service class="Shopware\StorefrontApi\Controller\ProductController" id="Shopware\StorefrontApi\Controller\ProductController">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\Rest\Response\ResponseFactory"/>
            <argument type="service" id="Shopware\Api\Entity\Search\SearchCriteriaBuilder"/>
        </service>

        <service class="Shopware\StorefrontApi\Controller\CheckoutController" id="Shopware\StorefrontApi\Controller\CheckoutController">
            <argument id="Shopware\Cart\Cart\CircularCartCalculation" type="service"/>
            <argument id="Shopware\CartBridge\Cart\CartPersister" type="service"/>
            <argument id="Shopware\CartBridge\Order\OrderPersister" type="service"/>
            <argument type="service" id="Shopware\Api\Order\Repository\OrderRepository"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service class="Shopware\StorefrontApi\Controller\CustomerController" id="Shopware\StorefrontApi\Controller\CustomerController">
            <argument id="serializer" type="service"/>
            <argument id="security.authentication.manager" type="service"/>
            <argument id="security.token_storage" type="service"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service class="Shopware\StorefrontApi\Controller\ContextController" id="Shopware\StorefrontApi\Controller\ContextController">
            <argument id="Shopware\Api\Payment\Repository\PaymentMethodRepository" type="service"/>
            <argument id="Shopware\Api\Shipping\Repository\ShippingMethodRepository" type="service"/>
            <argument id="Shopware\Api\Customer\Repository\CustomerAddressRepository" type="service"/>
            <argument id="Shopware\StorefrontApi\Context\StorefrontContextPersister" type="service"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service class="Shopware\StorefrontApi\Firewall\CustomerProvider" id="Shopware\StorefrontApi\Firewall\CustomerProvider">
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerRepository"/>
        </service>

        <service class="Shopware\StorefrontApi\Search\KeywordSearchTermInterpreter" id="Shopware\StorefrontApi\Search\KeywordSearchTermInterpreter">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Api\Entity\Search\Term\Tokenizer"/>
            <argument type="service" id="logger"/>
        </service>

        <service class="Shopware\StorefrontApi\Context\ContextSubscriber" id="Shopware\StorefrontApi\Context\ContextSubscriber">
            <tag name="kernel.event_subscriber"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextService"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\ContextTokenResolver"/>
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--calculations-->
        <service id="Shopware\CartBridge\Product\ProductCalculator" class="Shopware\CartBridge\Product\ProductCalculator">
            <argument id="Shopware\Cart\Price\PriceCalculator" type="service"/>
        </service>

        <service id="Shopware\CartBridge\Voucher\VoucherCalculator" class="Shopware\CartBridge\Voucher\VoucherCalculator" >
            <argument id="Shopware\Cart\Price\PercentagePriceCalculator" type="service"/>
            <argument id="Shopware\Cart\Price\AbsolutePriceCalculator" type="service"/>
        </service>


        <!--cart processors-->
        <service id="Shopware\CartBridge\Product\ProductProcessor" class="Shopware\CartBridge\Product\ProductProcessor">
            <argument type="service" id="Shopware\CartBridge\Product\ProductCalculator" />
            <tag name="cart.processor" priority="1000" />
        </service>

        <service id="Shopware\CartBridge\Voucher\VoucherProcessor" class="Shopware\CartBridge\Voucher\VoucherProcessor" >
            <argument id="Shopware\CartBridge\Voucher\VoucherCalculator" type="service"/>
            <tag name="cart.processor" priority="900"/>
        </service>

        <service id="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountProcessor" class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountProcessor">
            <argument id="Shopware\Cart\Price\PercentagePriceCalculator" type="service"/>
            <tag name="cart.processor" priority="800"/>
        </service>

        <service id="Shopware\CartBridge\Order\MinimumOrderAmountProcessor" class="Shopware\CartBridge\Order\MinimumOrderAmountProcessor">
            <argument type="service" id="Shopware\Cart\Price\AbsolutePriceCalculator"/>
            <tag name="cart.processor" priority="700"/>
        </service>

        <service id="Shopware\CartBridge\Payment\PaymentSurchargeProcessor" class="Shopware\CartBridge\Payment\PaymentSurchargeProcessor">
            <tag name="cart.processor" priority="600"/>
            <argument type="service" id="Shopware\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Shopware\Cart\Price\AbsolutePriceCalculator"/>
        </service>

        <!--cart line item data collectors-->
        <service id="Shopware\CartBridge\Product\ProductCollector" class="Shopware\CartBridge\Product\ProductCollector">
            <argument id="Shopware\CartBridge\Product\ProductGateway" type="service"/>
            <tag name="cart.collector" priority="1000" />
        </service>

        <service id="Shopware\CartBridge\Voucher\VoucherCollector" class="Shopware\CartBridge\Voucher\VoucherCollector" >
            <argument id="Shopware\CartBridge\Voucher\VoucherGateway" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <!--interface implementations of cart bundle-->

        <service id="Shopware\CartBridge\Product\ProductGateway" class="Shopware\CartBridge\Product\ProductGateway" >
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
        </service>

        <service id="Shopware\CartBridge\Service\StoreFrontCartService" class="Shopware\CartBridge\Service\StoreFrontCartService">
            <argument type="service" id="Shopware\Cart\Cart\CartCalculator" />
            <argument type="service" id="Shopware\CartBridge\Cart\CartPersister" />
            <argument type="service" id="Shopware\Storefront\Context\StorefrontContextService" />
            <argument type="service" id="session" />
            <argument type="service" id="Shopware\CartBridge\Order\OrderPersister" />
        </service>

        <service id="Shopware\CartBridge\Order\OrderPersister" class="Shopware\CartBridge\Order\OrderPersister">
            <argument id="Shopware\Api\Order\Repository\OrderRepository" type="service"/>
            <argument id="Shopware\Cart\Tax\TaxDetector" type="service"/>
        </service>

        <service id="Shopware\CartBridge\Cart\CartPersister" class="Shopware\CartBridge\Cart\CartPersister">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="Shopware\Serializer\JsonSerializer" />
        </service>

        <service id="Shopware\CartBridge\Voucher\VoucherGateway" class="Shopware\CartBridge\Voucher\VoucherGateway" >
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="Shopware\Cart\Tax\PercentageTaxRuleBuilder" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\ProductOfCategoriesRuleCollector" class="Shopware\CartBridge\Rule\Collector\ProductOfCategoriesRuleCollector">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\LastOrderRuleCollector" class="Shopware\CartBridge\Rule\Collector\LastOrderRuleCollector">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\OrderClearedStateRuleCollector" class="Shopware\CartBridge\Rule\Collector\OrderClearedStateRuleCollector">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\OrderCountRuleCollector" class="Shopware\CartBridge\Rule\Collector\OrderCountRuleCollector">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\ProductAttributeRuleCollector" class="Shopware\CartBridge\Rule\Collector\ProductAttributeRuleCollector">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\Rule\Collector\ProductOfManufacturersRuleCollector" class="Shopware\CartBridge\Rule\Collector\ProductOfManufacturersRuleCollector" >
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountCollector" class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountCollector">
            <tag name="cart.collector" priority="-1000"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerGroupDiscountRepository"/>
        </service>

    </services>
</container>

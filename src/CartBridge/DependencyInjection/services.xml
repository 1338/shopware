<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!--calculations-->
        <service id="shopware.cart.product.calculator" class="Shopware\CartBridge\Product\ProductCalculator">
            <argument id="cart.price.calculator" type="service"/>
        </service>

        <service id="shopware.cart.voucher.voucher_calculator" class="Shopware\CartBridge\Voucher\VoucherCalculator" >
            <argument id="cart.price.percentage_calculator" type="service"/>
            <argument id="cart.price.absolute_calculator" type="service"/>
        </service>


        <!--cart processors-->
        <service id="cart.product.processor" class="Shopware\CartBridge\Product\ProductProcessor">
            <argument type="service" id="shopware.cart.product.calculator" />
            <tag name="cart.processor" priority="1000" />
        </service>

        <service id="shopware.cart.voucher.processor" class="Shopware\CartBridge\Voucher\VoucherProcessor" >
            <argument id="shopware.cart.voucher.voucher_calculator" type="service"/>
            <tag name="cart.processor" priority="900"/>
        </service>

        <service id="cart.customer_group.discount_processor" class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountProcessor">
            <argument id="cart.price.percentage_calculator" type="service"/>
            <tag name="cart.processor" priority="800"/>
        </service>

        <service id="cart.order.minimum_order_amount_processor" class="Shopware\CartBridge\Order\MinimumOrderAmountProcessor">
            <argument type="service" id="cart.price.absolute_calculator"/>
            <tag name="cart.processor" priority="700"/>
        </service>

        <service id="cart.payment.payment_surcharge_processor" class="Shopware\CartBridge\Payment\PaymentSurchargeProcessor">
            <tag name="cart.processor" priority="600"/>
            <argument type="service" id="cart.price.percentage_calculator"/>
            <argument type="service" id="cart.price.absolute_calculator"/>
        </service>

        <!--cart line item data collectors-->
        <service id="shopware.cart.product.collector" class="Shopware\CartBridge\Product\ProductCollector">
            <argument id="shopware.cart.product.gateway" type="service"/>
            <tag name="cart.collector" priority="1000" />
        </service>

        <service id="shopware.cart.voucher.collector" class="Shopware\CartBridge\Voucher\VoucherCollector" >
            <argument id="shopware.cart.voucher.gateway" type="service"/>
            <tag name="cart.collector"/>
        </service>

        <!--interface implementations of cart bundle-->

        <service id="shopware.cart.product.gateway" class="Shopware\CartBridge\Product\ProductGateway" >
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
        </service>

        <service id="shopware.cart.storefront_service" class="Shopware\CartBridge\Service\StoreFrontCartService">
            <argument type="service" id="cart.calculator" />
            <argument type="service" id="shopware.cart.persister" />
            <argument type="service" id="shopware.storefront.context.storefront_context_service" />
            <argument type="service" id="session" />
            <argument type="service" id="shopware.cart.order.persister" />
        </service>

        <service id="shopware.cart.order.persister" class="Shopware\CartBridge\Order\OrderPersister">
            <argument id="Shopware\Api\Order\Repository\OrderRepository" type="service"/>
            <argument id="cart.tax.detector" type="service"/>
        </service>

        <service id="shopware.cart.persister" class="Shopware\CartBridge\Cart\CartPersister">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="shopware.serializer.json_serializer" />
        </service>

        <service id="shopware.cart.voucher.gateway" class="Shopware\CartBridge\Voucher\VoucherGateway" >
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="cart.tax.percentage_rule_builder" />
        </service>

        <service id="shopware.cart.rule.product_of_categories_collector" class="Shopware\CartBridge\Rule\Collector\ProductOfCategoriesRuleCollector">
            <argument id="dbal_connection" type="service"/>
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.rule.last_order_collector" class="Shopware\CartBridge\Rule\Collector\LastOrderRuleCollector">
            <argument type="service" id="dbal_connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.rule.order_cleared_state_collector" class="Shopware\CartBridge\Rule\Collector\OrderClearedStateRuleCollector">
            <argument type="service" id="dbal_connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.rule.order_count_collector" class="Shopware\CartBridge\Rule\Collector\OrderCountRuleCollector">
            <argument type="service" id="dbal_connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.rule.product_attribute_collector" class="Shopware\CartBridge\Rule\Collector\ProductAttributeRuleCollector">
            <argument type="service" id="dbal_connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.rule.product_of_manufacturer_collector" class="Shopware\CartBridge\Rule\Collector\ProductOfManufacturersRuleCollector" >
            <argument type="service" id="dbal_connection" />
            <tag name="cart.collector" priority="-1000" />
        </service>

        <service id="shopware.cart.customer_group.customer_group_discount_collector" class="Shopware\CartBridge\CustomerGroup\CustomerGroupDiscountCollector">
            <tag name="cart.collector" priority="-1000"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerGroupDiscountRepository"/>
        </service>

    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.lessphp.class">Shopware\Storefront\Theme\LessphpFilter</parameter>
    </parameters>

    <services>

        <service class="Shopware\Storefront\Twig\TemplateDataExtension" id="Shopware\Storefront\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument type="service" id="Shopware\Storefront\Theme\ThemeConfigReader" />
        </service>

        <!-- Twig / Theme -->
        <service class="Shopware\Storefront\Theme\ThemeCacheWarmer" public="false" id="Shopware\Storefront\Theme\ThemeCacheWarmer">
            <tag name="kernel.cache_warmer" priority="15" />

            <argument>%assetic.variables%</argument>
            <argument type="service" id="assetic.asset_manager" />
            <argument>%assetic.write_to%</argument>
        </service>

        <service class="Shopware\Storefront\Twig\TemplateFinder" public="true" id="Shopware\Storefront\Twig\TemplateFinder">
            <argument id="kernel" type="service"/>
            <argument id="twig.loader" type="service"/>
        </service>

        <service class="Shopware\Storefront\Twig\InheritanceExtension" public="false" id="Shopware\Storefront\Twig\InheritanceExtension">
            <tag name="twig.extension" />

            <argument type="service" id="Shopware\Storefront\Twig\TemplateFinder" />
        </service>

        <service class="Twig_Extensions_Extension_Intl" id="twig.extension.intl">
            <tag name="twig.extension" />
        </service>

        <service class="Twig_Extensions_Extension_Text" id="twig.extension.text">
            <tag name="twig.extension" />
        </service>

        <service class="Shopware\Storefront\Twig\InstanceOfExtension" id="Shopware\Storefront\Twig\InstanceOfExtension">
            <tag name="twig.extension"/>
        </service>

        <service class="Shopware\Storefront\Theme\ThemeConfigReader" id="Shopware\Storefront\Theme\ThemeConfigReader">
            <argument type="service" id="Doctrine\DBAL\Connection" />
        </service>

        <service class="Shopware\Storefront\Session\ShopSubscriber" id="Shopware\Storefront\Session\ShopSubscriber">
            <argument type="service" id="Shopware\Storefront\Context\StorefrontContextService" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextValueResolver" id="Shopware\Storefront\Context\StorefrontContextValueResolver">
            <argument type="service" id="Shopware\Storefront\Context\StorefrontContextService" />
            <tag name="controller.argument_value_resolver"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextService" id="Shopware\Storefront\Context\StorefrontContextService" public="true">
            <argument id="request_stack" type="service"/>
            <argument id="Shopware\Context\Service\ContextFactory" type="service"/>
            <argument id="shopware.cache" type="service"/>
            <argument id="serializer" type="service"/>
            <argument id="security.token_storage" type="service"/>
            <argument type="service" id="Shopware\CartBridge\Cart\CartPersister"/>
            <argument type="service" id="Shopware\Cart\Tax\TaxDetector"/>
            <argument type="service" id="Shopware\Cart\Cart\CartCollector"/>
            <argument type="service" id="Shopware\Cart\Cart\CartProcessor"/>
            <argument type="service" id="Shopware\Cart\Cart\CartValidator"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextSwitcher" id="Shopware\Storefront\Context\StorefrontContextSwitcher">
            <argument id="session" type="service"/>
            <argument id="Shopware\Storefront\Context\StorefrontContextService" type="service"/>
        </service>

        <service class="Shopware\Storefront\Navigation\NavigationService" id="Shopware\Storefront\Navigation\NavigationService" public="true">
            <argument type="service" id="Shopware\Api\Category\Repository\CategoryRepository"/>
        </service>

        <service class="Shopware\Storefront\Page\Detail\DetailPageLoader" id="Shopware\Storefront\Page\Detail\DetailPageLoader">
            <argument id="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingPageLoader" id="Shopware\Storefront\Page\Listing\ListingPageLoader">
            <argument id="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Search\SearchPageLoader" id="Shopware\Storefront\Page\Search\SearchPageLoader">
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument id="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\Storefront\Page\Search\KeywordSearchTermInterpreter"/>
        </service>

        <service class="Shopware\Storefront\Firewall\CustomerProvider" id="Shopware\Storefront\Firewall\CustomerProvider">
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerRepository"/>
        </service>

        <service class="Shopware\Storefront\Controller\AccountController" public="true" id="Shopware\Storefront\Controller\AccountController">
            <argument type="service" id="security.authentication_utils" />
        </service>

        <service class="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" id="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository">
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="Shopware\Cart\Price\PriceCalculator"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductMediaRepository"/>
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\IndexController" public="true" id="Shopware\Storefront\Controller\Widgets\IndexController">
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository" />
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\CheckoutController" public="true" id="Shopware\Storefront\Controller\Widgets\CheckoutController">
            <argument type="service" id="Shopware\CartBridge\Service\StoreFrontCartService" />
        </service>

        <service class="Shopware\Storefront\Controller\ListingController" public="true" id="Shopware\Storefront\Controller\ListingController">
            <argument type="service" id="Shopware\Storefront\Page\Listing\ListingPageLoader" />
        </service>

        <service class="Shopware\Storefront\Controller\DetailController" public="true" id="Shopware\Storefront\Controller\DetailController">
            <argument type="service" id="Shopware\Storefront\Page\Detail\DetailPageLoader" />
        </service>

        <service class="Shopware\Storefront\Controller\CheckoutController" public="true" id="Shopware\Storefront\Controller\CheckoutController">
            <argument type="service" id="Shopware\CartBridge\Service\StoreFrontCartService" />
        </service>

        <service class="Shopware\Storefront\Controller\SearchController" public="true" id="Shopware\Storefront\Controller\SearchController">
            <argument id="Shopware\Framework\Config\ConfigService" type="service"/>
            <argument id="Shopware\Storefront\Page\Search\SearchPageLoader" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Search\KeywordSearchTermInterpreter" id="Shopware\Storefront\Page\Search\KeywordSearchTermInterpreter">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Api\Entity\Search\Term\Tokenizer"/>
            <argument type="service" id="logger"/>
        </service>

    </services>
</container>

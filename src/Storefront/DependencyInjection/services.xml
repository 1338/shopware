<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.lessphp.class">Shopware\Storefront\Theme\LessphpFilter</parameter>
    </parameters>

    <services>
        <service class="Shopware\Context\Service\ContextRuleLoader" id="Shopware\Context\Service\ContextRuleLoader">
            <argument id="Shopware\CartBridge\Cart\CartPersister" type="service"/>
            <argument id="Shopware\Cart\Tax\TaxDetector" type="service"/>
            <argument id="Shopware\Cart\Cart\CartCollector" type="service"/>
            <argument id="Shopware\Cart\Cart\CartProcessor" type="service"/>
            <argument id="Shopware\Cart\Cart\CartValidator" type="service"/>
            <argument id="shopware.cache" type="service"/>
            <argument id="Shopware\Api\Context\Repository\ContextRuleRepository" type="service"/>
            <argument id="serializer" type="service"/>
            <argument type="service" id="service_container"/>
        </service>

        <service class="Shopware\Storefront\Twig\TemplateDataExtension" id="Shopware\Storefront\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument type="service" id="Shopware\Storefront\Theme\ThemeConfigReader" />
        </service>

        <!-- Twig / Theme -->
        <service class="Shopware\Storefront\Theme\ThemeCacheWarmer" public="false" id="Shopware\Storefront\Theme\ThemeCacheWarmer">
            <tag name="kernel.cache_warmer" priority="15" />

            <argument>%assetic.variables%</argument>
            <argument type="service" id="assetic.asset_manager" />
            <argument>%assetic.write_to%</argument>
        </service>

        <service class="Shopware\Storefront\Twig\TemplateFinder" public="true" id="Shopware\Storefront\Twig\TemplateFinder">
            <argument id="kernel" type="service"/>
            <argument id="twig.loader" type="service"/>
        </service>

        <service class="Shopware\Storefront\Twig\InheritanceExtension" public="false" id="Shopware\Storefront\Twig\InheritanceExtension">
            <tag name="twig.extension" />

            <argument type="service" id="Shopware\Storefront\Twig\TemplateFinder" />
        </service>

        <service class="Twig_Extensions_Extension_Intl" id="twig.extension.intl">
            <tag name="twig.extension" />
        </service>

        <service class="Twig_Extensions_Extension_Text" id="twig.extension.text">
            <tag name="twig.extension" />
        </service>

        <service class="Shopware\Storefront\Twig\InstanceOfExtension" id="Shopware\Storefront\Twig\InstanceOfExtension">
            <tag name="twig.extension"/>
        </service>

        <service class="Shopware\Storefront\Theme\ThemeConfigReader" id="Shopware\Storefront\Theme\ThemeConfigReader">
            <argument type="service" id="Doctrine\DBAL\Connection" />
        </service>

        <service class="Shopware\Storefront\Session\ShopSubscriber" id="Shopware\Storefront\Session\ShopSubscriber">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\ContextTokenResolver"/>
        </service>

        <service class="Shopware\Storefront\Navigation\NavigationService" id="Shopware\Storefront\Navigation\NavigationService" public="true">
            <argument type="service" id="Shopware\Api\Category\Repository\CategoryRepository"/>
        </service>

        <service id="Shopware\Storefront\Page\Checkout\PaymentMethodLoader">
            <argument id="Shopware\Api\Payment\Repository\PaymentMethodRepository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Detail\DetailPageLoader" id="Shopware\Storefront\Page\Detail\DetailPageLoader">
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingPageLoader" id="Shopware\Storefront\Page\Listing\ListingPageLoader">
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
            <argument id="Shopware\Storefront\Page\Listing\ListingHandler\ListingHandlerRegistry" type="service"/>
            <argument type="service" id="logger"/>
        </service>

        <service class="Shopware\Storefront\Page\Search\SearchPageLoader" id="Shopware\Storefront\Page\Search\SearchPageLoader">
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\StorefrontApi\Search\KeywordSearchTermInterpreter"/>
        </service>


        <service class="Shopware\Storefront\Controller\AccountController" public="true" id="Shopware\Storefront\Controller\AccountController">
            <argument type="service" id="security.authentication_utils" />
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\IndexController" public="true" id="Shopware\Storefront\Controller\Widgets\IndexController">
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository" />
            <argument type="service" id="Shopware\Api\Currency\Repository\CurrencyRepository"/>
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\CheckoutController" public="true" id="Shopware\Storefront\Controller\Widgets\CheckoutController">
            <argument type="service" id="Shopware\CartBridge\Service\StoreFrontCartService" />
        </service>

        <service class="Shopware\Storefront\Controller\ListingController" public="true" id="Shopware\Storefront\Controller\ListingController">
            <argument type="service" id="Shopware\Storefront\Page\Listing\ListingPageLoader" />
        </service>

        <service class="Shopware\Storefront\Controller\DetailController" public="true" id="Shopware\Storefront\Controller\DetailController">
            <argument type="service" id="Shopware\Storefront\Page\Detail\DetailPageLoader" />
        </service>

        <service id="Shopware\Storefront\Controller\CheckoutController">
            <argument type="service" id="Shopware\CartBridge\Service\StoreFrontCartService"/>
            <argument type="service" id="Shopware\Api\Order\Repository\OrderRepository"/>
            <argument type="service" id="Shopware\Storefront\Page\Checkout\PaymentMethodLoader"/>
            <argument type="service" id="Shopware\Payment\PaymentProcessor"/>
            <argument type="service" id="Shopware\Payment\Token\PaymentTransactionTokenFactory"/>
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
            <argument type="service" id="Shopware\StorefrontApi\Context\StorefrontContextPersister"/>
        </service>

        <service class="Shopware\Storefront\Controller\SearchController" public="true" id="Shopware\Storefront\Controller\SearchController">
            <argument id="Shopware\Framework\Config\ConfigService" type="service"/>
            <argument id="Shopware\Storefront\Page\Search\SearchPageLoader" type="service"/>
        </service>

        <service class="Shopware\Storefront\Session\SessionContextTokenResolver"
                 id="Shopware\Storefront\Session\SessionContextTokenResolver"
                 decorates="Shopware\StorefrontApi\Context\ContextTokenResolver">

            <argument id="Shopware\Storefront\Session\SessionContextTokenResolver.inner" type="service" />
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingHandler\ListingHandlerRegistry" id="Shopware\Storefront\Page\Listing\ListingHandler\ListingHandlerRegistry">
            <argument type="tagged" tag="storefront.listing.handler" />
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingHandler\PriceListingHandler" id="Shopware\Storefront\Page\Listing\ListingHandler\PriceListingHandler">
            <tag name="storefront.listing.handler" />
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingHandler\ManufacturerListingHandler" id="shopware.storefront.page.listing.listing_handler.manufacturer_listing_handler">
            <tag name="storefront.listing.handler" />
            <argument type="service" id="Shopware\Api\Product\Repository\ProductManufacturerRepository"/>
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingHandler\SortingListingHandler" id="Shopware\Storefront\Page\Listing\ListingHandler\SortingListingHandler">
            <argument id="Shopware\Api\Listing\Repository\ListingSortingRepository" type="service"/>
            <tag name="storefront.listing.handler"/>
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingHandler\DatasheetListingHandler" id="Shopware\Storefront\Page\Listing\ListingHandler\DatasheetListingHandler">
            <tag name="storefront.listing.handler"/>
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\ListingController" id="Shopware\Storefront\Controller\Widgets\ListingController">
            <argument id="Shopware\StorefrontApi\Product\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\Storefront\Page\Listing\ListingPageLoader"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

    </services>
</container>

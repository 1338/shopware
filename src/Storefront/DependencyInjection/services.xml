<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.filter.lessphp.class">Shopware\Storefront\Theme\LessphpFilter</parameter>
    </parameters>

    <services>

        <service id="shopware.storefront.twig.template_data_extension" class="Shopware\Storefront\Twig\TemplateDataExtension">
            <tag name="twig.extension" />

            <argument type="service" id="translator" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument type="service" id="shopware.storefront.component.theme.config_reader" />
        </service>

        <!-- Twig / Theme -->
        <service id="shopware.storefront.component.theme.theme_cache_warmer" class="Shopware\Storefront\Theme\ThemeCacheWarmer" public="false">
            <tag name="kernel.cache_warmer" priority="15" />

            <argument>%assetic.variables%</argument>
            <argument type="service" id="assetic.asset_manager" />
            <argument>%assetic.write_to%</argument>
        </service>

        <service id="shopware.storefront.twig.template_finder" class="Shopware\Storefront\Twig\TemplateFinder" public="true">
            <argument id="kernel" type="service"/>
            <argument id="twig.loader" type="service"/>
        </service>

        <service id="shopware.storefront.twig.inheritance_extension" class="Shopware\Storefront\Twig\InheritanceExtension" public="false">
            <tag name="twig.extension" />

            <argument type="service" id="shopware.storefront.twig.template_finder" />
        </service>

        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension" />
        </service>

        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension" />
        </service>

        <service id="shopware.storefront.twig.instance_of_extension" class="Shopware\Storefront\Twig\InstanceOfExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="shopware.storefront.component.theme.config_reader" class="Shopware\Storefront\Theme\ThemeConfigReader">
            <argument type="service" id="dbal_connection" />
        </service>

        <service id="shopware.session.shop_subscriber" class="Shopware\Storefront\Session\ShopSubscriber">
            <argument type="service" id="shopware.storefront.context.storefront_context_service" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Storefront\Page\Detail\DetailPageUrlGenerator" id="shopware.storefront.detail_page.detail_page_url_generator">
            <argument id="Shopware\Api\Product\Repository\ProductRepository" type="service"/>
            <argument id="slugify" type="service"/>
            <argument id="Shopware\Framework\Routing\Router" type="service"/>
            <argument id="Shopware\Api\Seo\Repository\SeoUrlRepository" type="service" />
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingPageUrlGenerator" id="shopware.storefront.listing_page.listing_page_url_generator">
            <argument id="Shopware\Api\Category\Repository\CategoryRepository" type="service"/>
            <argument id="slugify" type="service"/>
            <argument id="Shopware\Framework\Routing\Router" type="service"/>
            <argument id="Shopware\Api\Seo\Repository\SeoUrlRepository" type="service" />
        </service>

        <service class="Shopware\Storefront\Context\ShopContextValueResolver" id="shopware.storefront.context.shop_context_value_resolver">
            <argument type="service" id="shopware.storefront.context.storefront_context_service" />
            <tag name="controller.argument_value_resolver"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextService" id="shopware.storefront.context.storefront_context_service" public="true">
            <argument id="request_stack" type="service"/>
            <argument id="shopware.context.service.context_factory" type="service"/>
            <argument id="shopware.cache" type="service"/>
            <argument id="shopware.serializer.serializer_registry" type="service"/>
            <argument id="security.token_storage" type="service"/>
        </service>

        <service class="Shopware\Storefront\Context\StorefrontContextSwitcher" id="shopware.storefront.context.storefront_context_switcher">
            <argument id="session" type="service"/>
            <argument id="shopware.storefront.context.storefront_context_service" type="service"/>
        </service>

        <service class="Shopware\Storefront\Navigation\NavigationService" id="shopware.storefront.navigation.navigation_service" public="true">
            <argument type="service" id="Shopware\Api\Category\Repository\CategoryRepository"/>
        </service>

        <service class="Shopware\Storefront\Page\Detail\DetailPageLoader" id="shopware.storefront.page.detail.detail_page_loader">
            <argument id="shopware.storefront.product_repository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Listing\ListingPageLoader" id="shopware.storefront.page.listing.listing_page_loader">
            <argument id="shopware.storefront.product_repository" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Search\SearchPageLoader" id="shopware.storefront.page.search.search_page_loader">
            <argument type="service" id="Shopware\Framework\Config\ConfigService" />
            <argument id="shopware.storefront.product_repository" type="service"/>
            <argument type="service" id="shopware.storefront.search_term_interpreter"/>
        </service>

        <service class="Shopware\Storefront\Firewall\CustomerProvider" id="shopware.storefront.firewall.customer_provider">
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerRepository"/>
        </service>

        <service class="Shopware\Storefront\Controller\AccountController" public="true" id="shopware.storefront.controller.account">
            <argument type="service" id="security.authentication_utils" />
        </service>

        <service class="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" id="shopware.storefront.product_repository">
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="cart.price.calculator"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductMediaRepository"/>
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\IndexController" public="true" id="Shopware\Storefront\Controller\Widgets\IndexController">
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository" />
        </service>

        <service class="Shopware\Storefront\Controller\Widgets\CheckoutController" public="true" id="Shopware\Storefront\Controller\Widgets\CheckoutController">
            <argument type="service" id="shopware.cart.storefront_service" />
        </service>

        <service class="Shopware\Storefront\Controller\ListingController" public="true" id="Shopware\Storefront\Controller\ListingController">
            <argument type="service" id="shopware.storefront.page.listing.listing_page_loader" />
        </service>

        <service class="Shopware\Storefront\Controller\DetailController" public="true" id="Shopware\Storefront\Controller\DetailController">
            <argument type="service" id="shopware.storefront.page.detail.detail_page_loader" />
        </service>

        <service class="Shopware\Storefront\Controller\CheckoutController" public="true" id="Shopware\Storefront\Controller\CheckoutController">
            <argument type="service" id="shopware.cart.storefront_service" />
        </service>

        <service class="Shopware\Storefront\Controller\SearchController" public="true" id="Shopware\Storefront\Controller\SearchController">
            <argument id="Shopware\Framework\Config\ConfigService" type="service"/>
            <argument id="shopware.storefront.page.search.search_page_loader" type="service"/>
        </service>

        <service class="Shopware\Storefront\Page\Search\KeywordSearchTermInterpreter" id="shopware.storefront.search_term_interpreter">
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="shopware.search.tokenizer"/>
            <argument type="service" id="logger"/>
        </service>

    </services>
</container>

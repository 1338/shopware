<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Filesystem -->
        <service id="Shopware\Filesystem\FilesystemFactory" class="Shopware\Filesystem\FilesystemFactory">
            <argument type="tagged" tag="Shopware\Filesystem\FilesystemFactory"/>
        </service>

        <service id="shopware.filesystem.public" class="League\Flysystem\FilesystemInterface">
            <factory service="Shopware\Filesystem\FilesystemFactory" method="factory" />
            <argument>%shopware.filesystem.public%</argument>
        </service>

        <service id="shopware.filesystem.private" class="League\Flysystem\FilesystemInterface">
            <factory service="Shopware\Filesystem\FilesystemFactory" method="factory" />
            <argument>%shopware.filesystem.private%</argument>
        </service>

        <service id="Shopware\Filesystem\FilesystemFactory.local" class="Shopware\Filesystem\Adapter\LocalFactory">
            <tag name="Shopware\Filesystem\FilesystemFactory" />
        </service>

        <service id="Shopware\Filesystem\FilesystemFactory.amazon_s3" class="Shopware\Filesystem\Adapter\AwsS3v3Factory">
            <tag name="Shopware\Filesystem\FilesystemFactory" />
        </service>

        <service id="Shopware\Filesystem\FilesystemFactory.google_storage" class="Shopware\Filesystem\Adapter\GoogleStorageFactory">
            <tag name="Shopware\Filesystem\FilesystemFactory" />
        </service>

        <service id="Shopware\Filesystem\FilesystemFactory.microsoft_azure" class="Shopware\Filesystem\Adapter\AzureFactory">
            <tag name="Shopware\Filesystem\FilesystemFactory" />
        </service>
        
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Shopware\Media\Extension\UrlExtension" id="Shopware\Media\Extension\UrlExtension">
            <argument id="Shopware\Media\UrlGenerator" type="service"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="shopware.entity.extension"/>
        </service>

        <service class="Shopware\Media\Extension\ThumbnailExtension" id="Shopware\Media\Extension\ThumbnailExtension">
            <argument id="Shopware\Media\UrlGenerator" type="service"/>
            <tag name="kernel.event_subscriber"/>
            <!--<tag name="shopware.entity.extension"/>-->
        </service>

        <!-- ProductMedia Extension -->

        <service id="Shopware\Media\GarbageCollector\GarbageCollectorFactory" class="Shopware\Media\GarbageCollector\GarbageCollectorFactory">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="Shopware\Media\Strategy\StrategyInterface" />
        </service>

        <service id="Shopware\Media\GarbageCollector\GarbageCollector" class="Shopware\Media\GarbageCollector\GarbageCollector">
            <factory service="Shopware\Media\GarbageCollector\GarbageCollectorFactory" method="factory" />
        </service>

        <service id="Shopware\Filesystem\PrefixFilesystem" class="Shopware\Filesystem\PrefixFilesystem">
            <argument type="service" id="shopware.filesystem.public" />
            <argument>media</argument>
        </service>

        <service id="Shopware\Media\Strategy\StrategyFilesystem" class="Shopware\Media\Strategy\StrategyFilesystem">
            <argument type="service" id="Shopware\Filesystem\PrefixFilesystem" />
            <argument type="service" id="Shopware\Media\Strategy\StrategyInterface" />
        </service>

        <service id="Shopware\Media\UrlGenerator" class="Shopware\Media\UrlGenerator">
            <argument type="service" id="Shopware\Media\Strategy\StrategyInterface" />
            <argument type="service" id="request_stack" />
            <argument>%shopware.cdn.url%</argument>
        </service>

        <service id="Shopware\Media\MediaReplaceService" class="Shopware\Media\MediaReplaceService">
            <argument type="service" id="Shopware\Media\Strategy\StrategyFilesystem" />
            <!--<argument type="service" id="thumbnail_manager"/>-->
            <!--<argument type="service" id="models" />-->
        </service>

        <service id="Shopware\Media\Strategy\StrategyFactory" class="Shopware\Media\Strategy\StrategyFactory">
            <argument type="tagged" tag="Shopware\Media\Strategy\StrategyInterface" />
        </service>

        <service id="Shopware\Media\Strategy\StrategyInterface" class="Shopware\Media\Strategy\StrategyInterface">
            <factory service="Shopware\Media\Strategy\StrategyFactory" method="factory" />
            <argument>%shopware.cdn.strategy%</argument>
        </service>

        <!-- Commands -->
        <service id="Shopware\Media\Commands\MediaMigrateCommand" class="Shopware\Media\Commands\MediaMigrateCommand">
            <argument type="service" id="Shopware\Media\Strategy\StrategyFilesystem" />
            <argument type="service" id="Shopware\Media\Strategy\StrategyFactory" />
            <argument type="service" id="event_dispatcher" />
            <tag name="console.command" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="Shopware\Media\Commands\MediaCleanupCommand" class="Shopware\Media\Commands\MediaCleanupCommand">
            <argument type="service" id="Shopware\Media\GarbageCollector\GarbageCollector" />
            <tag name="console.command" />
        </service>

        <service id="Shopware\Media\Commands\MediaOptimizeCommand" class="Shopware\Media\Commands\MediaOptimizeCommand">
            <argument type="service" id="Shopware\Media\Optimizer\CacheOptimizerService" />
            <argument>%kernel.project_dir%/web/media</argument>
            <tag name="console.command" />
        </service>

        <!-- Strategies -->
        <service id="Shopware\Media\Strategy\StrategyInterface.md5" class="Shopware\Media\Strategy\Md5Strategy">
            <tag name="Shopware\Media\Strategy\StrategyInterface" />
        </service>

        <service id="Shopware\Media\Strategy\StrategyInterface.plain" class="Shopware\Media\Strategy\PlainStrategy">
            <tag name="Shopware\Media\Strategy\StrategyInterface" />
        </service>

        <!-- Optimizer -->
        <service id="Shopware\Media\Optimizer\OptimizerService" class="Shopware\Media\Optimizer\OptimizerService">
            <argument type="tagged" tag="shopware.media.optimizer" />
            <argument type="service" id="Shopware\Media\Strategy\StrategyFilesystem" />
        </service>

        <service id="Shopware\Media\Optimizer\CacheOptimizerService" class="Shopware\Media\Optimizer\CacheOptimizerService"
                 decorates="Shopware\Media\Optimizer\OptimizerService" public="false">
            <argument type="service" id="Shopware\Media\Optimizer\CacheOptimizerService.inner" />
        </service>

        <service id="Shopware\Media\Optimizer\JpegoptimOptimizer" class="Shopware\Media\Optimizer\JpegoptimOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service id="Shopware\Media\Optimizer\JpegtranOptimizer" class="Shopware\Media\Optimizer\JpegtranOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service id="Shopware\Media\Optimizer\PngoutOptimizer" class="Shopware\Media\Optimizer\PngoutOptimizer">
            <tag name="shopware.media.optimizer" priority="100" />
        </service>

        <service id="Shopware\Media\Optimizer\OptipngOptimizer" class="Shopware\Media\Optimizer\OptipngOptimizer">
            <tag name="shopware.media.optimizer" priority="90" />
        </service>

        <service id="Shopware\Media\Optimizer\PngcrushOptimizer" class="Shopware\Media\Optimizer\PngcrushOptimizer">
            <tag name="shopware.media.optimizer" priority="80" />
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service class="Shopware\Api\Entity\Search\Term\Tokenizer" id="shopware.search.tokenizer"/>

        <service class="Shopware\Api\Entity\Search\Term\StopWordFilter" id="shopware.search.filter"/>

        <service class="Shopware\Api\Entity\Search\Term\SearchTermInterpreter" id="shopware.api.search_term_interpreter">
            <argument id="shopware.search.tokenizer" type="service"/>
        </service>

        <service class="Shopware\Api\Entity\Search\Term\EntityScoreQueryBuilder" id="shopware.api.search.entity_score_query_builder"/>

        <service class="Shopware\Api\Entity\ExtensionRegistry" id="shopware.api.entity.extension_registry" public="true">
            <argument type="tagged" tag="shopware.entity.extension" />
        </service>

        <service class="Shopware\Api\Entity\DefinitionRegistry" id="shopware.api.entity_definition_registry">
            <argument type="collection" />
        </service>

        <service class="Shopware\Api\Entity\Dbal\EntityReader" id="shopware.api.entity_reader">
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="shopware.api.entity_searcher"/>
        </service>

        <service class="Shopware\Api\Entity\Dbal\EntityAggregator" id="shopware.api.entity_aggregator">
            <argument id="dbal_connection" type="service"/>
            <argument id="shopware.api.entity_reader" type="service"/>
        </service>

        <service class="Shopware\Api\Entity\Dbal\EntitySearcher" id="shopware.api.entity_searcher" >
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="Shopware\Api\Entity\Write\EntityWriter" id="shopware.api.entity_writer">
            <argument type="service" id="Shopware\Api\Entity\Write\WriteCommandExtractor"/>
            <argument type="service" id="shopware.api.write.field_aware.default_extender"/>
            <argument type="service" id="Shopware\Api\Entity\Dbal\EntityForeignKeyResolver"/>
            <argument id="Shopware\Api\Entity\Write\EntityWriteGatewayInterface" type="service"/>
        </service>

        <service class="Shopware\Api\Entity\Write\WriteCommandExtractor" id="Shopware\Api\Entity\Write\WriteCommandExtractor">
            <argument id="Shopware\Api\Entity\Write\EntityWriteGatewayInterface" type="service"/>
        </service>

        <service class="Shopware\Api\Entity\Dbal\EntityWriteGateway" id="Shopware\Api\Entity\Write\EntityWriteGatewayInterface">
            <argument id="dbal_connection" type="service"/>
        </service>

        <service id="shopware.validation.constraint_builder" class="Shopware\Api\Entity\Write\Validation\ConstraintBuilder"/>

        <service class="Shopware\Api\Entity\Write\FieldAware\DefaultExtender" id="shopware.api.write.field_aware.default_extender">
            <argument id="validator" type="service"/>
            <argument id="shopware.validation.constraint_builder" type="service"/>
            <argument id="shopware.api.entity.write.id_generator.registry" type="service"/>
            <argument id="shopware.api.entity.write.filter.registry" type="service"/>
            <argument id="shopware.api.entity.write.value_transformer.registry" type="service"/>
        </service>


        <service class="Shopware\Api\Entity\Search\Parser\SqlQueryParser" id="shopware.search.sql_parser"/>

        <!-- Value transformer -->
        <service class="Shopware\Api\Entity\Write\ValueTransformer\ValueTransformerRegistry" id="shopware.api.entity.write.value_transformer.registry">
            <argument type="tagged" tag="shopware.api.entity.write.value_transformer" />
        </service>

        <service class="Shopware\Api\Entity\Write\ValueTransformer\ValueTransformerDate" id="shopware.api.entity.write.value_transformer.date">
            <tag name="shopware.api.entity.write.value_transformer"/>
        </service>

        <service class="Shopware\Api\Entity\Write\ValueTransformer\ValueTransformerBoolean" id="shopware.api.entity.write.value_transformer.boolean">
            <tag name="shopware.api.entity.write.value_transformer"/>
        </service>

        <!-- Filter -->
        <service class="Shopware\Api\Entity\Write\Filter\FilterRegistry" id="shopware.api.entity.write.filter.registry">
            <argument type="tagged" tag="shopware.api.entity.write.filter" />
        </service>

        <service class="Shopware\Api\Entity\Write\Filter\HtmlFilter" id="shopware.api.entity.write.filter.html_filter">
            <tag name="shopware.api.entity.write.filter"/>
        </service>

        <!-- ID GENERATOR -->
        <service id="shopware.api.entity.write.id_generator.registry" class="Shopware\Api\Entity\Write\IdGenerator\GeneratorRegistry">
            <argument type="tagged" tag="shopware.api.entity.write.id_generator" />
        </service>

        <service id="shopware.api.entity.write.id_generator.ramsey_generator" class="Shopware\Api\Entity\Write\IdGenerator\RamseyGenerator">
            <tag name="shopware.api.entity.write.id_generator"/>
        </service>

        <service id="shopware.api.entity.write.id_generator.product_number_generator" class="Shopware\Api\Entity\Write\IdGenerator\ProductNumberGenerator">
            <argument type="service" id="dbal_connection"/>

            <tag name="shopware.api.entity.write.id_generator"/>
        </service>

        <service id="Shopware\Api\Entity\Dbal\EntityForeignKeyResolver" class="Shopware\Api\Entity\Dbal\EntityForeignKeyResolver">
            <argument id="dbal_connection" type="service"/>
        </service>


    </services>
</container>

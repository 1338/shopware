<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
         <service class="Shopware\Api\Locale\Definition\LocaleDefinition" id="shopware.locale.locale_definition" >
            <tag name="shopware.entity.definition" entity="locale" />
        </service>
        <service class="Shopware\Api\Locale\Repository\LocaleRepository" id="Shopware\Api\Locale\Repository\LocaleRepository" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Locale\Definition\LocaleTranslationDefinition" id="shopware.locale.locale_translation_definition" >
            <tag name="shopware.entity.definition" entity="locale_translation" />
        </service>
        <service class="Shopware\Api\Locale\Repository\LocaleTranslationRepository" id="Shopware\Api\Locale\Repository\LocaleTranslationRepository" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                
<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
         <service class="Shopware\Api\Tax\Definition\TaxDefinition" id="shopware.tax.tax_definition" >
            <tag name="shopware.entity.definition" entity="tax" />
        </service>
        <service class="Shopware\Api\Tax\Repository\TaxRepository" id="Shopware\Api\Tax\Repository\TaxRepository" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Tax\Definition\TaxAreaRuleDefinition" id="shopware.tax.tax_area_rule_definition" >
            <tag name="shopware.entity.definition" entity="tax_area_rule" />
        </service>
        <service class="Shopware\Api\Tax\Repository\TaxAreaRuleRepository" id="Shopware\Api\Tax\Repository\TaxAreaRuleRepository" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
         <service class="Shopware\Api\Tax\Definition\TaxAreaRuleTranslationDefinition" id="shopware.tax.tax_area_rule_translation_definition" >
            <tag name="shopware.entity.definition" entity="tax_area_rule_translation" />
        </service>
        <service class="Shopware\Api\Tax\Repository\TaxAreaRuleTranslationRepository" id="Shopware\Api\Tax\Repository\TaxAreaRuleTranslationRepository" public="true">
          <argument id="Shopware\Api\Entity\Dbal\EntityReader" type="service"/>
          <argument id="Shopware\Version\VersionManager" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntitySearcher" type="service"/>
          <argument id="Shopware\Api\Entity\Dbal\EntityAggregator" type="service"/>
          <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>                
                
<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Payment\PaymentProcessor">
            <argument type="service" id="Shopware\Payment\Token\TokenFactory"/>
            <argument type="service" id="Shopware\Api\Order\Repository\OrderRepository"/>
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
            <argument type="service" id="Shopware\Framework\Routing\Router"/>
            <argument type="service" id="service_container"/>
        </service>

        <service id="Shopware\Payment\Controller\PaymentController">
            <argument type="service" id="Shopware\Payment\Token\TokenFactory" />
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
        </service>

        <service id="Shopware\Payment\Token\TokenFactory">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Shopware\Payment\PaymentHandler\PrePayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service id="Shopware\Payment\PaymentHandler\InvoicePayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>

        <service id="Shopware\Payment\PaymentHandler\SEPAPayment">
            <tag name="payment.method" />
            <argument type="service" id="Shopware\Api\Order\Repository\OrderTransactionRepository"/>
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Shopware\Translation\ImportService" class="Shopware\Translation\ImportService">
            <argument type="service" id="dbal_connection" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="logger" />
        </service>

        <service id="Shopware\Translation\Command\TranslationImportCommand" class="Shopware\Translation\Command\TranslationImportCommand">
            <tag name="kernel.event_subscriber" />
            <tag name="console.command" />

            <argument type="service" id="Shopware\Translation\ImportService" />
        </service>

        <!-- Translation / Snippet -->
        <service id="Shopware\Translation\DatabaseLoader" class="Shopware\Translation\DatabaseLoader">
            <tag name="translation.loader" alias="database" />

            <argument type="service" id="dbal_connection" />
        </service>


    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\DbalIndexing\Common\ContextVariationService" id="shopware.dbal_indexing.context_variation_service">
            <argument id="Shopware\Api\Shop\Repository\ShopRepository" type="service"/>
        </service>

        <service class="Shopware\DbalIndexing\Common\IndexTableOperator" id="shopware.dbal_indexing.index_table_operator">
            <argument id="dbal_connection" type="service"/>
        </service>

        <service class="Shopware\DbalIndexing\Search\SearchIndexer" id="shopware.dbal_indexing.search.search_indexer">
            <tag name="shopware.dbal_indexing.indexer"/>
            <argument id="dbal_connection" type="service"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="shopware.dbal_indexing.context_variation_service"/>
            <argument type="service" id="shopware.dbal_indexing.search.search_analyzer_registry"/>
            <argument type="service" id="shopware.dbal_indexing.index_table_operator"/>
        </service>

        <service class="Shopware\DbalIndexing\Search\SearchAnalyzerRegistry" id="shopware.dbal_indexing.search.search_analyzer_registry">
            <argument type="tagged" tag="shopware.search_analyzer"/>
        </service>

        <service class="Shopware\DbalIndexing\Indexer\ShopIndexer" id="shopware.dbal_indexing.indexer.shop_indexer">
            <argument type="tagged" tag="shopware.dbal_indexing.indexer"/>
        </service>

        <service class="Shopware\DbalIndexing\ProductCategory\ProductCategoryIndexer" id="shopware.dbal_indexing.product_category_indexer">
            <tag name="shopware.dbal_indexing.indexer"/>
            <argument type="service" id="Shopware\Api\Product\Repository\ProductRepository"/>
            <argument type="service" id="dbal_connection"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="shopware.category.path_builder"/>
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository"/>
        </service>

        <service class="Shopware\DbalIndexing\Command\RefreshIndexCommand" id="shopware.dbal_indexing.command.refresh_index_command">
            <argument type="service" id="shopware.dbal_indexing.indexer.shop_indexer"/>
            <tag name="kernel.event_subscriber"/>
            <tag name="console.command"/>
        </service>

        <service class="Shopware\DbalIndexing\Event\EventSubscriber" id="shopware.dbal_indexing.event.event_subscriber">
            <argument id="shopware.dbal_indexing.indexer.shop_indexer" type="service"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service class="Shopware\DbalIndexing\Search\LanguageAnalyzer" id="shopware.search.analyzer">
            <argument id="shopware.search.tokenizer" type="service"/>
            <argument id="shopware.search.filter" type="service"/>
            <tag name="shopware.search_analyzer" />
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Rest\Context\ApiStorefrontContextPersister" id="Shopware\Rest\Context\ApiStorefrontContextPersister">
            <argument id="Doctrine\DBAL\Connection" type="service"/>
        </service>

        <service class="Shopware\Rest\Context\ApiStorefrontContextService" id="Shopware\Rest\Context\ApiStorefrontContextService">
            <argument id="Shopware\Context\Service\ContextFactory" type="service"/>
            <argument id="Shopware\Context\Service\ContextRuleLoader" type="service"/>
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository"/>
            <argument type="service" id="Shopware\Rest\Context\ApiStorefrontContextPersister"/>
        </service>

        <service class="Shopware\Rest\Context\ApiStorefrontContextValueResolver" id="Shopware\Rest\Context\ApiStorefrontContextValueResolver">
            <argument id="Shopware\Rest\Context\ApiStorefrontContextService" type="service"/>
            <tag name="controller.argument_value_resolver"/>
        </service>

        <service class="Shopware\Rest\Controller\Storefront\ProductController" id="Shopware\Rest\Controller\Storefront\ProductController">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <argument id="Shopware\Storefront\Bridge\Product\Repository\StorefrontProductRepository" type="service"/>
            <argument type="service" id="Shopware\Rest\Response\ResponseFactory"/>
        </service>

        <service class="Shopware\Rest\Controller\Storefront\CheckoutController" id="Shopware\Rest\Controller\Storefront\CheckoutController">
            <argument id="Shopware\Cart\Cart\CircularCartCalculation" type="service"/>
            <argument id="Shopware\CartBridge\Cart\CartPersister" type="service"/>
            <argument id="Shopware\CartBridge\Order\OrderPersister" type="service"/>
            <argument type="service" id="Shopware\Api\Order\Repository\OrderRepository"/>
            <argument type="service" id="serializer"/>
            <argument type="service" id="Shopware\Rest\Context\ApiStorefrontContextPersister"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>

        <service class="Shopware\Rest\EventListener\CorsListener" id="Shopware\Rest\EventListener\CorsListener">
            <tag name="kernel.event_subscriber" />
        </service>

        <service class="Shopware\Rest\EventListener\ResponseExceptionListener" id="Shopware\Rest\EventListener\ResponseExceptionListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="logger" />
            <argument type="service" id="Shopware\Rest\Response\ResponseFactory" />
        </service>

        <service class="Shopware\Rest\Context\RestContextValueResolver" id="Shopware\Rest\Context\RestContextValueResolver">
            <tag name="controller.argument_value_resolver"/>
            <argument type="service" id="security.token_storage"/>
            <argument type="service" id="Shopware\Api\Entity\Dbal\EntitySearcher"/>
        </service>

        <service class="Shopware\Rest\Firewall\AuthProvider" id="Shopware\Rest\Firewall\AuthProvider">
            <argument type="service" id="Doctrine\DBAL\Connection" />
        </service>

        <service class="Shopware\Rest\Firewall\AuthenticationFailureListener" id="Shopware\Rest\Firewall\AuthenticationFailureListener">
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_authentication_failure" method="onAuthenticationFailureResponse" />
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_jwt_invalid" method="onJWTInvalid" />
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_jwt_not_found" method="onJWTNotFound" />
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_jwt_expired" method="onJWTExpired" />
        </service>

        <service class="Shopware\Rest\Firewall\AuthenticationSuccessListener" id="Shopware\Rest\Firewall\AuthenticationSuccessListener">
            <argument>%lexik_jwt_authentication.token_ttl%</argument>
            <tag name="kernel.event_listener" event="lexik_jwt_authentication.on_authentication_success" method="onAuthenticationSuccessResponse" />
        </service>

        <service class="Shopware\Rest\Command\UserCreateCommand" id="Shopware\Rest\Command\UserCreateCommand">
            <argument id="Shopware\Api\User\Repository\UserRepository" type="service"/>
            <argument id="security.encoder_factory.generic" type="service"/>
            <tag name="console.command"/>
        </service>

        <service class="Shopware\Rest\Controller\ApiController" id="Shopware\Rest\Controller\ApiController" public="true">
            <argument id="Shopware\Api\Entity\DefinitionRegistry" type="service"/>
            <argument id="serializer" type="service"/>
            <argument id="Shopware\Rest\Response\ResponseFactory" type="service"/>
            <argument id="Shopware\Api\Entity\Write\EntityWriter" type="service"/>
            <argument type="service" id="Shopware\Api\Entity\Search\SearchCriteriaBuilder"/>
        </service>

        <service class="Shopware\Rest\Controller\SyncController" public="true" id="Shopware\Rest\Controller\SyncController" >
            <argument type="service" id="Shopware\Api\Entity\DefinitionRegistry"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="serializer"/>
        </service>

        <!-- Serializer -->
        <service class="Shopware\Rest\Serializer\JsonApiEncoder" id="shopware.api.serializer.json_api_encoder">
            <argument type="service" id="Shopware\Framework\Serializer\StructDecoder" />
            <tag name="serializer.encoder" />
        </service>

        <service class="Shopware\Rest\Serializer\JsonApiDecoder" id="shopware.api.serializer.json_api_decoder">
            <tag name="serializer.encoder" />
        </service>

        <!-- Response types -->
        <service class="Shopware\Rest\Response\ResponseFactory" id="Shopware\Rest\Response\ResponseFactory">
            <argument type="tagged" tag="shopware.rest.response_type" />
        </service>

        <service class="Shopware\Rest\Response\Type\JsonApiType" id="Shopware\Rest\Response\Type\JsonApiType">
            <argument type="service" id="serializer" />
            <tag name="shopware.rest.response_type" />
        </service>

        <service class="Shopware\Rest\Response\Type\JsonType" id="Shopware\Rest\Response\Type\JsonType">
            <argument type="service" id="serializer" />
            <tag name="shopware.rest.response_type" />
        </service>

        <!-- API Docs -->
        <service class="Shopware\Rest\ApiDefinition\DefinitionService" id="Shopware\Rest\ApiDefinition\DefinitionService">
            <argument type="tagged" tag="shopware.rest.definition_generator" />
        </service>

        <service class="Shopware\Rest\ApiDefinition\Generator\OpenApi3Generator" id="Shopware\Rest\ApiDefinition\Generator\OpenApi3Generator">
            <argument type="service" id="Shopware\Api\Entity\DefinitionRegistry" />
            <tag name="shopware.rest.definition_generator" />
        </service>

        <service class="Shopware\Rest\Controller\InfoController" id="Shopware\Rest\Controller\InfoController" public="true">
            <argument id="Shopware\Rest\ApiDefinition\DefinitionService" type="service"/>
        </service>

        <service class="Shopware\Rest\Controller\ProductActionController" id="Shopware\Rest\Controller\ProductActionController">
            <argument id="Shopware\Product\Service\VariantGenerator" type="service"/>
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
        </service>
    </services>
</container>

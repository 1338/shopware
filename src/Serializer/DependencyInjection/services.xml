<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Serializer\SerializerRegistry" id="Shopware\Serializer\SerializerRegistry">
            <argument type="collection">
                <argument type="service" id="Shopware\Serializer\ArraySerializer" />
                <argument type="service" id="Shopware\Serializer\JsonSerializer" />
                <argument type="service" id="Shopware\Serializer\ApiJsonSerializer" />
            </argument>
        </service>

        <service class="Shopware\Serializer\ObjectDeserializer" id="Shopware\Serializer\ObjectDeserializer"/>

        <service class="Shopware\Serializer\ArraySerializer" id="Shopware\Serializer\ArraySerializer">
            <argument id="Shopware\Serializer\ObjectDeserializer" type="service"/>
        </service>

        <service class="Shopware\Serializer\JsonSerializer" id="Shopware\Serializer\JsonSerializer">
            <argument id="Shopware\Serializer\ObjectDeserializer" type="service"/>
        </service>

        <service class="Shopware\Serializer\ApiJsonSerializer" id="Shopware\Serializer\ApiJsonSerializer"/>

    </services>
</container>

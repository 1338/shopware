<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service class="Shopware\Context\Service\ContextFactory" id="Shopware\Context\Service\ContextFactory">
            <argument type="service" id="Shopware\Api\Shop\Repository\ShopRepository"/>
            <argument type="service" id="Shopware\Api\Currency\Repository\CurrencyRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerGroupRepository"/>
            <argument type="service" id="Shopware\Api\Country\Repository\CountryRepository"/>
            <argument type="service" id="Shopware\Api\Tax\Repository\TaxRepository"/>
            <argument type="service" id="Shopware\Api\Customer\Repository\CustomerAddressRepository"/>
            <argument type="service" id="Shopware\Api\Payment\Repository\PaymentMethodRepository"/>
            <argument type="service" id="Shopware\Api\Shipping\Repository\ShippingMethodRepository"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Shopware\Api\Country\Repository\CountryStateRepository"/>
            <tag name="shopware.traceable" />
        </service>
    </services>
</container>

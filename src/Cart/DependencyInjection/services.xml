<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="Shopware\Cart\Price\PriceRounding.precision">2</parameter>
    </parameters>

    <services>

        <!-- price calculation -->
        <service id="Shopware\Cart\Price\AmountCalculator" class="Shopware\Cart\Price\AmountCalculator" >
            <argument type="service" id="Shopware\Cart\Tax\TaxDetector" />
            <argument type="service" id="Shopware\Cart\Price\PriceRounding" />
            <argument type="service" id="Shopware\Cart\Tax\TaxAmountCalculator" />
        </service>

        <service id="Shopware\Cart\Price\PriceRounding" class="Shopware\Cart\Price\PriceRounding">
            <argument>%Shopware\Cart\Price\PriceRounding.precision%</argument>
        </service>

        <service id="Shopware\Cart\Price\PriceCalculator" class="Shopware\Cart\Price\PriceCalculator">
            <argument type="service" id="Shopware\Cart\Tax\TaxCalculator" />
            <argument type="service" id="Shopware\Cart\Price\PriceRounding" />
            <argument type="service" id="Shopware\Cart\Tax\TaxDetector" />
        </service>

        <service id="Shopware\Cart\Price\PercentagePriceCalculator" class="Shopware\Cart\Price\PercentagePriceCalculator">
            <argument type="service" id="Shopware\Cart\Price\PriceRounding"/>
            <argument type="service" id="Shopware\Cart\Price\PriceCalculator"/>
            <argument type="service" id="Shopware\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <service id="Shopware\Cart\Price\AbsolutePriceCalculator" class="Shopware\Cart\Price\AbsolutePriceCalculator">
            <argument type="service" id="Shopware\Cart\Price\PriceCalculator"/>
            <argument type="service" id="Shopware\Cart\Tax\PercentageTaxRuleBuilder"/>
        </service>

        <!-- tax calculation -->
        <service id="Shopware\Cart\Tax\PercentageTaxRuleBuilder" class="Shopware\Cart\Tax\PercentageTaxRuleBuilder" />

        <service id="Shopware\Cart\Tax\TaxDetector" class="Shopware\Cart\Tax\TaxDetector" />

        <service id="Shopware\Cart\Tax\TaxCalculator" class="Shopware\Cart\Tax\TaxCalculator" >
            <argument type="service" id="Shopware\Cart\Price\PriceRounding" />
            <argument type="tagged" tag="Shopware\Cart\Tax\TaxRuleCalculator" />
        </service>

        <service id="Shopware\Cart\Tax\TaxRuleCalculator" class="Shopware\Cart\Tax\TaxRuleCalculator">
            <argument type="service" id="Shopware\Cart\Price\PriceRounding" />
            <tag name="Shopware\Cart\Tax\TaxRuleCalculator" />
        </service>

        <service id="Shopware\Cart\Tax\PercentageTaxRuleCalculator" class="Shopware\Cart\Tax\PercentageTaxRuleCalculator">
            <argument type="service" id="Shopware\Cart\Tax\TaxRuleCalculator" />
            <tag name="Shopware\Cart\Tax\TaxRuleCalculator" />
        </service>

        <service id="Shopware\Cart\Tax\TaxAmountCalculator" class="Shopware\Cart\Tax\TaxAmountCalculator" >
            <argument type="service" id="Shopware\Cart\Tax\PercentageTaxRuleBuilder" />
            <argument type="service" id="Shopware\Cart\Tax\TaxCalculator" />
            <argument type="service" id="Shopware\Cart\Tax\TaxDetector" />
        </service>

        <service id="Shopware\Cart\Cart\CartCalculator" class="Shopware\Cart\Cart\CartCalculator">
            <argument type="tagged" tag="cart.processor" />
            <argument type="tagged" tag="cart.collector" />
            <argument type="service" id="Shopware\Cart\Price\AmountCalculator" />
        </service>

        <service id="Shopware\Cart\Delivery\StockDeliverySeparator" class="Shopware\Cart\Delivery\StockDeliverySeparator">
            <argument type="service" id="Shopware\Cart\Price\PriceCalculator" />
        </service>

        <service id="Shopware\Cart\Delivery\DeliveryCalculator" class="Shopware\Cart\Delivery\DeliveryCalculator">
            <argument id="dbal_connection" type="service"/>
            <argument id="Shopware\Cart\Price\PriceCalculator" type="service"/>
            <argument id="Shopware\Cart\Tax\PercentageTaxRuleBuilder" type="service"/>
        </service>

        <!-- cart processors-->

        <!--processors-->
        <service id="Shopware\Cart\Delivery\DeliverySeparatorProcessor" class="Shopware\Cart\Delivery\DeliverySeparatorProcessor">
            <argument type="service" id="Shopware\Cart\Delivery\StockDeliverySeparator" />
            <tag name="cart.processor" priority="-100" />
        </service>

        <service id="Shopware\Cart\Delivery\DeliveryCalculator_processor" class="Shopware\Cart\Delivery\DeliveryCalculatorProcessor">
            <argument id="Shopware\Cart\Delivery\DeliveryCalculator" type="service"/>
            <tag name="cart.processor" priority="-200" />
        </service>
    </services>
</container>
